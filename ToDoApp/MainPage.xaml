<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.MainPage">
    <VerticalStackLayout Padding="20" Spacing="15">


        <Label Text="To Do List" Style="{StaticResource TitleStyle}" />

 
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="To Do" Style="{StaticResource TabHeaderStyle}" TextDecorations="Underline"/>
            <Label Text="Done" Style="{StaticResource TabHeaderStyle}" />
            <Label Text="Settings" Style="{StaticResource TabHeaderStyle}" />
        </HorizontalStackLayout>

    
        <Border BackgroundColor="#aaaaaa"
                StrokeThickness="0"
                Stroke="#aaaaaa"
                Margin="0"
                Padding="15"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                StrokeShape="Rectangle">

            <VerticalStackLayout Spacing="10">

                <Grid ColumnDefinitions="*, Auto" RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Text="Task 1" Style="{StaticResource TaskButtonStyle}" />
                    <CheckBox Grid.Row="0" Grid.Column="1" />

                    <Button Grid.Row="1" Grid.Column="0" Text="Task 2" Style="{StaticResource TaskButtonStyle}" />
                    <CheckBox Grid.Row="1" Grid.Column="1" />

                    <Button Grid.Row="2" Grid.Column="0" Text="Task 3" Style="{StaticResource TaskButtonStyle}" />
                    <CheckBox Grid.Row="2" Grid.Column="1" />

                    <Button Grid.Row="3" Grid.Column="0" Text="Task 4" Style="{StaticResource TaskButtonStyle}" />
                    <CheckBox Grid.Row="3" Grid.Column="1" />

                    <Button Grid.Row="4" Grid.Column="0" Text="Task 5" Style="{StaticResource TaskButtonStyle}" />
                    <CheckBox Grid.Row="4" Grid.Column="1" />

                    <Button Grid.Row="5" Grid.Column="0" Text="Task 6" Style="{StaticResource TaskButtonStyle}" />
                    <CheckBox Grid.Row="5" Grid.Column="1" />

                </Grid>
            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="CenterAndExpand">
            <Button Text="New task" Style="{StaticResource NewTaskButtonStyle}" />
            <Button Text="Add new" Style="{StaticResource AddNewButtonStyle}" />
        </HorizontalStackLayout>

    </VerticalStackLayout>


</ContentPage>
