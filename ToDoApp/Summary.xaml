<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Summary"
             Title="Summary">
    <VerticalStackLayout Padding="20" Spacing="15">


        <Label Text="To Do List" Style="{StaticResource TitleStyle}" />


        <HorizontalStackLayout HorizontalOptions="Center">
            <Label x:Name="ToDo_Label" Text="To Do" Style="{StaticResource TabHeaderStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="Label_Done" Text="Done" Style="{StaticResource TabHeaderStyle}" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1"/>
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="Label_Summary" Text="Summary" Style="{StaticResource TabHeaderStyle}" TextDecorations="Underline" />
        </HorizontalStackLayout>

        <Border BackgroundColor="#aaaaaa"
         StrokeThickness="0"
         Stroke="#aaaaaa"
         Margin="0"
         Padding="15"
         HorizontalOptions="FillAndExpand"
         VerticalOptions="FillAndExpand"
         StrokeShape="Rectangle">

            <VerticalStackLayout Spacing="10">

                <Grid ColumnDefinitions="*, Auto" RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Text="Tasks in progress" Style="{StaticResource TaskButtonStyle}" IsEnabled="False" />
                    <Button Grid.Row="0" Grid.Column="1" Text="Number" Style="{StaticResource TaskButtonStyle}" IsEnabled="False" />

                    <Button Grid.Row="1" Grid.Column="0" Text="Tasks done" Style="{StaticResource TaskButtonStyle}" IsEnabled="False" />
                    <Button Grid.Row="1" Grid.Column="1" Text="Number" Style="{StaticResource TaskButtonStyle}" IsEnabled="False" />
                </Grid>
            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="CenterAndExpand">
            <Button Text="Delete" Style="{StaticResource DeleteButtonStyle}" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>