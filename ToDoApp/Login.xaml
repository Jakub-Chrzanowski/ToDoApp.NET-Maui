<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Login"
             Title="Login"
             BackgroundColor="#D9D9D9">
    <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <Label Text="Login" Grid.Column="0" Grid.Row="0" />
        <Entry x:Name="Login_Text" Grid.Column="1" Grid.Row="0" Placeholder="Entry login" Grid.ColumnSpan="2"/>
            <Label Text="Password"  Grid.Column="0" Grid.Row="1"/>
            <Entry x:Name="Password_Text" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Placeholder="Entry password" IsPassword="True"/>
        <Button x:Name="Login_Btn" Style="{StaticResource AddNewButtonStyle}" Text="Login" Grid.Column="0" Grid.Row="3" Clicked="Login_Btn_Clicked"/>
    </Grid>
</ContentPage>  